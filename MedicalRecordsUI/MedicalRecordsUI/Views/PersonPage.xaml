<Page
    x:Class="MedicalRecordsUI.Views.PersonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:MedicalRecordsUI.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignInstance viewModels:PersonViewModel}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="Persons"
                           FontSize="28"
                           FontWeight="SemiBold" />
                <TextBlock Text="Manage persons in the system"
                           FontSize="16"
                           Opacity="0.7" />
            </StackPanel>
            <Button Grid.Column="1"
                    Content="Create Person"
                    Command="{Binding ShowFormCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" />
        </Grid>

        <!-- Scrollable Content Area -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="16">
                <!-- Error Message -->
                <Border Background="#FF4444"
                        Padding="16"
                        CornerRadius="8"
                        Visibility="{Binding HasErrorMessage, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Error"
                                   FontWeight="SemiBold"
                                   FontSize="16" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <!-- Create/Edit Form -->
                <Border
                    Background="#2A2A2A"
                    Padding="24"
                    CornerRadius="8"
                    Visibility="{Binding IsFormVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Spacing="16">
                        <TextBlock Text="{Binding FormTitle}"
                                   FontSize="20"
                                   FontWeight="SemiBold" />

                        <Grid ColumnSpacing="16" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- First Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock Text="First Name *"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding FirstName, Mode=TwoWay}"
                                         PlaceholderText="Enter first name" />
                            </StackPanel>

                            <!-- Last Name -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Last Name *"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding LastName, Mode=TwoWay}"
                                         PlaceholderText="Enter last name" />
                            </StackPanel>

                            <!-- Date of Birth -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Date of Birth"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}" />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Email"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding Email, Mode=TwoWay}"
                                         PlaceholderText="Enter email address"
                                         InputScope="EmailSmtpAddress" />
                            </StackPanel>

                            <!-- Phone Number -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Phone Number"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}"
                                         PlaceholderText="Enter phone number"
                                         InputScope="TelephoneNumber" />
                            </StackPanel>

                            <!-- Address -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Address"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <TextBox Text="{Binding Address, Mode=TwoWay}"
                                         PlaceholderText="Enter address" />
                            </StackPanel>
                        </Grid>

                        <!-- Form Actions -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Spacing="8">
                            <Button Content="Cancel"
                                    Command="{Binding CancelEditCommand}" />
                            <Button Content="{Binding SaveButtonText}"
                                    Command="{Binding AddPersonCommand}"
                                    Style="{StaticResource AccentButtonStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <ProgressRing IsActive="{Binding IsLoading}"
                              Visibility="{Binding IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                              HorizontalAlignment="Center"
                              Width="50"
                              Height="50" />

                <!-- Persons List -->
                <ListView x:Name="PersonsListView"
                          ItemsSource="{Binding Persons}"
                          Visibility="{Binding ShowPersonsList, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#333"
                                    Padding="16"
                                    CornerRadius="8"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{Binding FirstName}"
                                                   FontSize="18"
                                                   FontWeight="SemiBold"
                                                   Foreground="White" />
                                        <TextBlock>
                                            <Run Text="{Binding LastName}" FontWeight="SemiBold" />
                                            <Run Text=" - " />
                                            <Run Text="{Binding DateOfBirth}" />
                                        </TextBlock>
                                        <TextBlock Text="{Binding Email}"
                                                   Opacity="0.7"
                                                   Visibility="{Binding Email, Converter={StaticResource StringToVisibilityConverter}}" />
                                        <TextBlock Text="{Binding PhoneNumber}"
                                                   Opacity="0.7"
                                                   Visibility="{Binding PhoneNumber, Converter={StaticResource StringToVisibilityConverter}}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditPersonCommand, ElementName=PersonsListView}"
                                                CommandParameter="{Binding}" />
                                        <Button Content="Delete"
                                                Command="{Binding DataContext.DeletePersonCommand, ElementName=PersonsListView}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <TextBlock Text="No persons found."
                           HorizontalAlignment="Center"
                           Opacity="0.5"
                           TextAlignment="Center"
                           Visibility="{Binding ShowEmptyState}"
                           Margin="0,50,0,50" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
